                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_fatherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Father Name"
                    android:inputType="text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Mother's Name"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_motherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Mother Name"
                    android:inputType="text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Gender"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textSize="14sp"></RadioButton>

                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textSize="14sp"></RadioButton>
                    </RadioGroup>
                    <!--                <EditText-->
                    <!--                    android:id="@+id/user_gender"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_marginTop="3dp"-->
                    <!--                    android:editable="false"-->
                    <!--                    android:focusableInTouchMode="false"-->
                    <!--                    android:inputType="text"-->
                    <!--                    android:text=""-->
                    <!--                    android:textSize="14sp" />-->
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Joining Date"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_joiningDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Joining Date"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Local Address"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_localAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Local Address"
                    android:inputType="text"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Notice Period"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Notice Period"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Employee Has Passport?"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbPassport_Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="14sp"></RadioButton>

                    <RadioButton
                        android:id="@+id/rbPassport_No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textSize="14sp"></RadioButton>
                </RadioGroup>
