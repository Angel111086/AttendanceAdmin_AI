                <!--                    android:layout_marginTop="3dp"-->
                <!--                    android:hint="Enter Whether User has Passport or Not?"-->
                <!--                    android:inputType="text"-->
                <!--                    android:textSize="14sp" />-->
            </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Password"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Password"
                    android:inputType="text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Permanent Address"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_permanentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter Permanent Address"
                    android:inputType="text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Salary"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:hint="Enter User's Salary"
                    android:inputType="number"
                    android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
