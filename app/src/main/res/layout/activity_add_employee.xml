                    android:textColor="@color/colorDarkGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ed_user_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
